resource "aws_s3_bucket_object" "deployment_object" {
  depends_on = [
    data.artifactory_file.cse_poller_package
  ]
  bucket = "${var.bucket}"
  key    = "${var.base_name}/cse-poller/${var.cse_poller_basename}-${var.cse_poller_version}"
  source = "${path.module}/cse-poller.jar"
}

resource "aws_api_gateway_rest_api" "rest_api"{
  name = var.rest_api_name
}
##########################################################

resource "aws_api_gateway_rest_api" "rest_api" {
  body = jsonencode({
    openapi = "3.0.1"
    info = {
      title   = "Chaos Testing Example"
      version = "1.0"
    }
    paths = {
      "/path1" = {
        get = {
          x-amazon-apigateway-integration = {
            httpMethod           = "GET"
            payloadFormatVersion = "1.0"
            type                 = "HTTP_PROXY"
            uri                  = "https://ip-ranges.amazonaws.com/ip-ranges.json"
          }
        }
      }
    }
  })

  name = var.rest_api_name

  endpoint_configuration {
    types = ["REGIONAL"]
  }
}

resource "aws_api_gateway_deployment" "chaos_testing_example" {
  rest_api_id = aws_api_gateway_rest_api.rest_api.id

  triggers = {
    redeployment = sha1(jsonencode(aws_api_gateway_rest_api.rest_api.body))
  }

  lifecycle {
    create_before_destroy = true
  }
}

resource "aws_api_gateway_stage" "chaos_testing_example" {
  deployment_id = aws_api_gateway_deployment.chaos_testing_example.id
  rest_api_id   = aws_api_gateway_rest_api.rest_api.id
  stage_name    = "dev"
}
